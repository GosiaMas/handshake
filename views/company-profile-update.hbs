  <input class="input" type="contact" id="contact" name="contact" value="{{company.contact}}">
  <br>
<br>

  <label class="title" for="businessSector">Business Sector</label>
  <input class="input" type="businessSector" id="businessSector" name="businessSector" value="{{company.businessSector}}">
<br>
  <br>
  <label class="title" for="description">Description</label>
  <textarea class="input" row="10" cols="30" id="description" name="description" value="{{company.description}}"></textarea>
